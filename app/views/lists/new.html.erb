<h2>New List:</h2>

<%= form_for [@user, @list] do |f| %>
  <% if @list.errors[:title].any?  %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(@list.errors[:title].count, "error") %>.</h4>
      <ul>
        <% @list.errors[:title].each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(@list.errors[:title]) do %>
    <%= f.text_field :title, rows: 8, class: 'form-control', placeholder: "Enter title here..." %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Create List", class: 'btn btn-success' %>
  </div>
<% end %>